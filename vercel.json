{
  "rewrites": [
    { "source": "/",      "destination": "/index.html" },
    { "source": "/home",  "destination": "/html/home.html" },
    { "source": "/games", "destination": "/html/games.html" },
    { "source": "/tools", "destination": "/html/tools.html" }
  ],
  "cleanUrls": true,
  "trailingSlash": false,
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=3600"
        }
      ]
    },
    {
      "source": "/css/(.*)",
      "headers": [
        {
          "key": "Content-Type",
          "value": "text/css"
        }
      ]
    },
    {
      "source": "/js/(.*)",
      "headers": [
        {
          "key": "Content-Type",
          "value": "application/javascript"
        }
      ]
    }
  ]
}

